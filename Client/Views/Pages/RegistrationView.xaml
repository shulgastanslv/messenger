<Page x:Class="Client.Views.Pages.RegistrationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views.Pages"
      xmlns:converters="clr-namespace:Client.Converters"
      xmlns:loadingSpinnerControl="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="RegistrationView">

    <Page.Resources>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Page.Resources>

        <ScrollViewer>

            <Grid SnapsToDevicePixels="True" 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Background="{StaticResource WrapperColorBrush}" 
                  Width="430" 
                  Height="580">

                <loadingSpinnerControl:LoadingSpinner
                    Width="50"
                    Height="50"
                    Diameter="45"
                    IsLoading="{Binding IsLoading}"/>

            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Width="250"
                        Visibility="{Binding IsLoading, 
                Converter={StaticResource InverseBooleanToVisibilityConverter}}">

                <TextBlock Text="Sign Up" FontSize="20" FontWeight="SemiBold" Foreground="White"
                           Margin="0, 0, 0, 10"/>

                <TextBlock Text="You will use this data every time you log in to your account." 
                           FontSize="13" FontWeight="Normal" 
                           Foreground="White"
                           TextWrapping="Wrap"
                           Margin="0, 0, 0, 10"
                           />


                <TextBlock Text="Enter username" 
                           Foreground="White"
                           FontSize="13"
                           Opacity="0.5" 
                           Margin="0, 0, 0, 10"/>


                <TextBox  Tag="Enter username"
                          Text="{Binding UserName}"
                          Name="UserNameTextBox" 
                          Margin="0, 0, 0, 15"/>


                <TextBlock Text="Enter Email" 
                           Foreground="White"
                           FontSize="13"
                           Opacity="0.5" 
                           Margin="0, 0, 0, 10"/>


                <TextBox  Tag="Enter Email"
                          Text="{Binding Email}"
                          Margin="0, 0, 0, 15"/>

                <TextBlock Text="Enter your Password" 
                           Foreground="White" 
                           Opacity="0.5" 
                           FontSize="13"
                           Margin="0, 0, 0, 10"/>

                <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                         Margin="0, 0, 0,15"
                         Tag="Enter Password"/>

                <CheckBox
                    Command="{Binding }"
                    Margin="0, 0, 0, 15"
                    IsChecked="{Binding IsAgree}"
                    Content="I accept the user agreement"/>

                <Button Command="{Binding RegistrationCommand}" 
                        Content="Sign Up"
                        />

                <Button Command="{Binding NavigateCommand}"
                        BorderThickness="1"
                        BorderBrush="#5E6175"
                        Background="Transparent"
                        HorizontalAlignment="Center"
                        Margin="0, 15, 0, 0"
                        Content="&lt;Back"/>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
